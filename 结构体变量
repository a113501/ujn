#include<stdio.h>#include<stdlib.h>#define N 3struct stud{ int s[N]; char name[8]; int sum; int ave;};void count(struct stud a[]);void main(){ struct stud a[N]; int j; for(j=0;j<N;j++)  scanf("%s%d%d%d",a[j].name,&a[j].s[0],&a[j].s[1],&a[j].s[2]); count(a); for(j=0;j<N;j++)  printf("%10s%4d%4d%4d%6d%4d\n",a[j].name,a[j].s[0],a[j].s[1],a[j].s[2],a[j].sum,a[j].ave);}void count(struct stud a[]){ int i,k; for(i=0;i<N;i++){  a[i].sum=0;  for(k=0;k<N;k++)   a[i].sum+=a[i].s[k];  a[i].ave=a[i].sum/N; }}
